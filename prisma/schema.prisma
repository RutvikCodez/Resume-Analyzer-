generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String
  name      String?
  image     String?
  createdAt DateTime @default(now())

  resumes Resume[]
}

model Resume {
  id             String   @id @default(uuid())
  userId         String
  fileUrl        String
  fileName       String

  overallScore   Int
  atsScore       Int
  toneScore      Int
  contentScore   Int
  structureScore Int
  skillsScore    Int

  rawAIResponse  Json
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  resumeTips        ResumeTip[]
  resumeExperiences ResumeExperience[]
  resumeEducations  ResumeEducation[]
}

model ResumeTip {
  id       String   @id @default(uuid())
  resumeId String
  section  ResumeSection
  type     TipType
  tip      String

  resume Resume @relation(fields: [resumeId], references: [id])
}

enum ResumeSection {
  ATS
  TONE
  CONTENT
  STRUCTURE
  SKILLS
}

enum TipType {
  good
  improve
}

model ResumeExperience {
  id          String @id @default(uuid())
  resumeId    String
  jobTitle    String
  company     String
  startDate   String
  endDate     String
  description String

  resume Resume @relation(fields: [resumeId], references: [id])
}

model ResumeEducation {
  id             String @id @default(uuid())
  resumeId       String
  schoolName     String
  educationLevel String
  startDate      String?
  endDate        String?
  cgpaOrMark     String?

  resume Resume @relation(fields: [resumeId], references: [id])
}
